<div class="card" style="width: 20rem;">
  <div class="card-body">
    <h4 class="card-title">{{title}}</h4>
    <h6 class="card-subtitle mb-2 text-muted">{{author}}<br><br>{{creation_time}}<br></h6>
    <p class="card-text">{{body}}</p>
  </div>
</div>
<form class"form" action="/blogpost/{{id}}?_method=DELETE" method="post">
  <a href="/blogpost/{{id}}/edit" type="button" class="btn btn-default btn-warning">
    Edit
  </a>
  <button type="submit" class="btn btn-default btn-danger">
    Delete
  </button>
  <a href="/comment/newcomment" type="button" class="btn btn-default btn-warning">
    Comment
  </a>
</form>
