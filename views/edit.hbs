<form class"form" action="/blogpost/{{id}}?_method=PUT" method="post">
<div class="form-group">
  <label for="title">Title</label>
  <input value="{{title}}" type="text" class="form-control" id="title" name="title">
</div>
<div class="form-group">
  <label for="author">Author</label>
  <input value="{{author}}" type="text" class="form-control" id="author" name="author">
</div>
<div class="form-group">
  <label for="body">Body</label>
  <textarea value="{{body}}" type="text" class="form-control" id="body" name="body">
  </textarea>
</div>
<button type="submit" class="btn btn-default btn-success">
Update
</button>
</form>
